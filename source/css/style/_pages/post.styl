
.thumbnail_bg 
    border-radius: 0 0 5px 5px
    background-repeat:no-repeat;
    background-size: cover;
    background-position: center;
    top: 0
    height: 35vh;
    display:flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
            
    .post-title__meta a
        color: rgb(226, 212, 193);

    .post-title__text
        color: white;

    #leancloud_container_page_pv
        color: white  

    .post-meta__date
        color: white  !important


@media screen and (max-width: 764px)
    .thumbnail_bg 
        float: top
        // position: absolute
        position: fixed !important
        z-index -9
        left 0
        top 0
        width: 100vw


.post-list
    &>:last-child
        margin-bottom 0

.post-entry
    margin-bottom var(--space)
    position relative
    box-shadow 1px 5px 30px 0 rgba(0,0,0,.1)
    // -webkit-box-shadow: 0 0px 3px 0px rgb(0 0 0 / 16%)

    &:hover
        -webkit-transform translateY(-5px)
        -ms-transform translateY(-5px)
        transform translateY(-5px)
        -webkit-box-shadow 1px 10px 30px 0 rgba(0,0,0,0.1)
        // box-shadow 1px 10px 30px 0 rgba(0,0,0,.1)
        box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);

.card-entry-with-thumbnail       
    h2
        margin-block-start: 1rem !important;
        margin-block-end: 0 !important;
    p
        margin-block-end: 0 !important;
        display:-webkit-box;
        overflow: hidden; 
        text-overflow: ellipsis;
        -webkit-box-orient:vertical; 
        -webkit-line-clamp: $content_show_lines; 
        font-size: 1rem
        line-height: 1.5rem
        font-weight: light
        // font-family: 'Brush Script MT', cursive;
        // font-family: 'Courier New', monospace;
        font-family: 'Courier New', monospace; !important
    
    .post-entry__title
        font-size: 1.4rem !important


    @media screen and (max-width: 764px)
        p 
            line-height: 1.2rem
            font-size: 0.9rem


.post-entry__content
    .post-entry__title
        color var(--title-color)
        margin-top 0
        border none
        font-size 1.6rem
        font-weight 450
        line-height 1
    
    p
        // font-family: 'Brush Script MT', cursive;
        // font-family: 'Courier New', monospace;
        // font-family: Georgia, serif;
        font-family: 'Trebuchet MS', sans-serif;
    

.post-meta__cats
.post-entry__tags
    display inline-block
    position relative
    margin 0.1em 0 0
    z-index 1
    font-family: Georgia, serif;

    &:empty
        display none

.post-entry__link
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0
    overflow hidden
    text-indent -9999px
    z-index 0

.post-title
    padding calc(var(--space)/2) 0 calc(var(--space)/2)
    text-align center

.post-meta__date
    color #808080

.post-entry__meta
.post-title__meta
    display block
    z-index 1
    position relative
    font-size .9rem
    // opacity .8
    font-family rubik,sans-serif
    color: black !important
    // font-family: 'Courier New', monospace;
    font-family: Georgia, serif;

    &:empty
        display none


.post-entry__header
.post__header
    border-radius $thumbnail_radius
    margin calc(var(--space) / 3 * -2) !important
    margin-bottom calc(var(--space) / 2) !important
    overflow hidden
    // height: 30vh

    &:empty
        display none

    .post-thumbnail
        display -webkit-box
        display -ms-flexbox
        display flex
        width 100%
        padding-bottom 60%
        background-size cover
        background-repeat repeat
        background-position 50% 50%
        background-origin padding-box
        background-attachment scroll

.post__content
    p
        line-height $lineheight
        font-size: 1rem
        overflow: hidden; 
        text-overflow: ellipsis;
        -webkit-box-orient:vertical; 
        -webkit-line-clamp: $content_show_lines_simple; 

    img
        &.inline
            display inline

    div>img,p>img,div>picture>img,p>picture>img
        display block
        margin auto
        border-radius 4px

    span
        img
            display inline
            margin auto


.post__comments
    max-width var(--content-width)
    margin var(--space) auto
    font-family rubik,sans-serif

    &:empty
        display none

.post-footer__meta
    font-size 14px
    // margin-top 0.2rem

    &>:last-child
        margin-bottom 0

    &:empty
        display none

.post-tags__link
.post-cats__link
    display inline-block
    margin .35em
    font-size .75em
    text-decoration none
    background-color var(--bg-cat-color)
    color currentColor !important
    padding 0.25rem 0.6rem 0.25rem 0.6rem
    border-radius $radius_button

.post-tags__link
    background-color var(--bg-tag-color)

.post__license
    background-color rgb(245, 245, 245)
    word-break break-all
    margin 3em calc(var(--space)/3 * -2) 1em calc(var(--space)/3 * -2)
    padding 0.5rem 0.8rem
    border-left 4px solid rgb(244, 67, 54)
    list-style none

    p 
        margin 1px 1px 3px 1px
        padding 0

.post__expire
    display none
    margin calc(var(--space) / 2) var(--space) 0 var(--space)
    padding .5rem .8rem
    background #ffffc0
    border-left 4px solid #fff000
    list-style none
    
    p
        color #947600
        margin 3px 1px 3px 1px
        padding 0